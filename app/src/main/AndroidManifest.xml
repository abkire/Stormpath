<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.stormpath.demo.stormpathnotes">

    <application
            android:name="com.stormpath.demo.stormpathnotes.NotesApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.stormpath.demo.stormpathnotes.NotesActivity"
                android:configChanges="orientation"
                android:label="@string/app_name"
                android:launchMode="singleTop"
                android:theme="@style/AppTheme.NoActionBar"
                android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>

                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <!-- social providers uri schemes -->
                <data android:scheme="fb1697895913782798"/>
                <data android:scheme="com.googleusercontent.apps.120814890096-1dt9ac0f83eng66troavm0a6dt9dgsp4"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.stormpath.sdk.ui.StormpathLoginActivity"
                android:theme="@style/AppTheme.NoActionBar"
                android:launchMode="singleInstance"
                android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name="com.stormpath.demo.stormpathnotes.NotesServerActivity"
                  android:theme="@style/AppTheme.NoActionBar"
                  android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
    </application>

</manifest>